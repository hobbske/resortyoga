<div class="background-posts">
	<div class="row">
	  <div class="col-md-6 col-md-offset-3">

			<p id="notice"><%= notice %></p>

				<div class="card text-center">
				  <h1><%= @post.title %></h1>
					<h3><%= @post.created_at.strftime("%A, %B %e, %Y @ %I:%M%p " ) %> </h3>
				
					<div class="fakeimg">	    		
						<%= image_tag('background/photo-gallery-05.jpg', class: 'blog-img') %>
					</div>
						
					<div class="post-body">	    		
						<%= @post.body %>
					</div>		
					
					<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-default' %>
					<%= link_to 'Back', posts_path, class: 'btn btn-primary' %>
				</div>	
		</div>
	</div>
</div>
