<p id="notice"><%= notice %></p>
<div class="text-center">
  <h1>Isabella's Blog</h1>
</div>
  
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at.strftime("%A, %B %e, %Y @ %I:%M%p " ) %> </td>
        <td><%= link_to 'Show', post, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning" %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
